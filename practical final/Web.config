<?xml version="1.0"?>
<configuration>

	<!-- 数据库连接 -->
	<connectionStrings>
		<add name="HotelDB" connectionString="Data Source=|DataDirectory|HotelDB.db;Version=3;" />
	</connectionStrings>

	<appSettings>
		<!-- 关闭非侵入式验证（4.0 支持的写法） -->
		<add key="ValidationSettings:UnobtrusiveValidationMode" value="None" />
	</appSettings>

	<system.web>

		<pages
			controlRenderingCompatibilityVersion="3.5"
			validateRequest="false"
			enableEventValidation="false"
			clientIDMode="AutoID">
		</pages>

		<!-- 注意：ASP.NET 4.0 必须写 targetFramework="4.0" -->
		<compilation debug="true" targetFramework="4.0" />

		<!-- 使用 2.0 验证方式（适配旧版 WebForms） -->
		<httpRuntime requestValidationMode="2.0" />

		<!-- Session -->
		<sessionState mode="InProc" timeout="30" />

	</system.web>

	<system.webServer>
		<modules runAllManagedModulesForAllRequests="true" />
	</system.webServer>

</configuration>
